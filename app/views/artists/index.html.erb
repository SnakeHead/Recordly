<div class="container">
<h1>Artists</h1><a href="artists/new"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a>


<table class="table table-bordered">
  <tr>
    <th>Artist Name</th>
    <th>Genre</th>
  </tr>

  <% @artists.each do |artist| %>
    <tr>
      <td><%= artist.name %></td>
      <td><%= artist.genre %></td>
      <td><%= link_to 'Show', artist_path(artist) %></td>
      <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
      <td><%= link_to 'Destroy', artist_path(artist),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
</div>
